ublochat.com.br {
    # Webhook route - Proxy to NodeJS Backend
    handle_path /webhook/* {
        uri strip_prefix /webhook
        rewrite * /webhook{uri}
        reverse_proxy app_backend:3001
    }

    # Allow direct backend access if needed (optional, keeping it safe for now)
    
    # Default - Proxy to React Frontend
    handle {
        reverse_proxy app_frontend:80
    }
}
